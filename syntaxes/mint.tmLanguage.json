{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "mint",
    "patterns": [{
            "include": "#keywords"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [{
                    "name": "keyword.hierarchy.mint",
                    "match": "\\b(IMPORT|LAYER|DEVICE|END)\\b"
                },
                {
                    "name": "keyword.LAYERTYPES.mint",
                    "match": "\\b(FLOW|CONTROL|INTEGRATION)\\b"
                },
                {
                    "name": "keyword.controlwords.mint",
                    "match": "\\b(from|to|of)\\b"
                },
                {
                    "name": "keyword.CONSTRAINTS.mint",
                    "match": "\\b(V|H|direction|dir|vconnect|hconnect|GRID|BANK)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.mint",
            "begin": "\"",
            "end": "\"",
            "patterns": [{
                "name": "constant.character.escape.mint",
                "match": "\\\\."
            }]
        }
    },
    "scopeName": "text.mint"
}